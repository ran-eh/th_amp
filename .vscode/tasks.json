{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "weather:latest",
				"dockerfile": "${workspaceFolder}/weather/Dockerfile",
				"context": "${workspaceFolder}/weather",
				"pull": true,
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"file": "main.py",
			},
			"dockerRun": {
				"network": "th_amp_default",
			},
			"options": {
				"env": {
					"PG_HOST": "db",
					"PG_DATABASE": "weather",
					"PG_USER": "postgres",
					"PG_PASSWORD": "postgres",
					"API_KEY": "MD8gOfRQx4yZ0lS8CfXv6OkVtBLCIdw8",
				}
			}
		}
	]
}